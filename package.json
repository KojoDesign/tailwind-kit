{
  "name": "tailwind-toolkit",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build:cjs": "tsup src/index.ts --dts --format cjs -d dist/cjs",
    "build:esm": "tsup src/index.ts --dts --format esm -d dist/esm",
    "build": "concurrently \"pnpm:build:cjs\" \"pnpm:build:esm\"",
    "test": "NODE_OPTIONS=\"$NODE_OPTIONS --experimental-vm-modules\" jest"
  },
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/esm/index.mjs",
      "require": "./dist/cjs/index.js"
    },
    "./*": "./dist/*"
  },
  "files": [
    "dist"
  ],
  "types": "dist/cjs/index.d.ts",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@biomejs/biome": "^1.4.1",
    "@ianvs/prettier-plugin-sort-imports": "^4.1.1",
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "concurrently": "^8.2.2",
    "expect": "^29.7.0",
    "jest": "^29.7.0",
    "jest-diff": "^29.7.0",
    "jest-matcher-css": "^1.1.0",
    "postcss": "^8.4.32",
    "prettier": "^3.1.1",
    "tailwindcss": "^3.4.0",
    "ts-jest": "^29.1.1",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "tailwindcss": "^3.4.0"
  },
  "dependencies": {
    "@ctrl/tinycolor": "^4.0.2",
    "change-case": "^5.3.0",
    "deepmerge": "^4.3.1"
  }
}
